<div class="container">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :name, placeholder: "Name", autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder: "Email" %>
  </div>

  <div class="field">
    <% if @validatable %>
        <% txt = "Password (#{@minimum_password_length} characters min.)" %>
    <% else %>
        <% txt = "Password" %>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", placeholder: txt %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "profiles/shared/links" %>
</div>
